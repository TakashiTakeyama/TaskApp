<div class="panel panel-default">
<div class="panel-heading">
  <h3><%= "#{@user.name}""#{t('view.index_task_all')}" %></h3><br>
    <strong><%= t('view.user_name') %></strong>
    <%= @user.name %>
  </div>
    <div class="panel-body">
    <strong><%= t('view.user_email') %></strong>
    <%= @user.email %>
  </div>
  <div class="panel-footer">
  <table class="table">
    <thead>
    <tr>
      <th>タスク名</th>
      <th>内容</th>
      <th>作成日時</th>
    </tr>
    </thead>
    <tbody>
    <% @user.blogs.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.details %></td>
        <td><%= l user.created_at, format: :short %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>
</div>
<div>
  <%= link_to "編集", edit_admin_user_path(@user), class: "btn btn-info btn-lg" %><br>
</div>
