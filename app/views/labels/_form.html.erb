<%#= form_with(model:@label, local: true) do |form| %
<%#= render 'form' %>
<%= form_with(model:@label, local: true) do |f| %>
  <% if @label.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@label.errors.count, "#{t('view.error')}") %></h2>
      <ul>
        <% @label.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="col">
      <div class="card-size">
        <div class="title text-center">
          <% unless @label.id.present? %>
            <h3><%= "ラベル作成" %></h3>
          <% else %>
            <h3><%= "ラベル編集" %></h3>
          <% end %>
        </div>
        <div class="row">
          <div class="col text-center">
            <%#= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
            <div class="form-group">
              <%= f.label :ラベル名 %>
              <%= f.text_field :label_name %>
            </div>
            <div class="form-group">
              <% unless @label.id.present? %>
                <%= f.submit "作成", class: "btn btn-lg btn-primary"%>
              <% else %>
                <%= f.submit "更新", class: "btn btn-lg btn-primary"%>
              <% end %>
            </div>
        <% end %>
        <%#= render 'layouts/simple_log' %>
        </div>
      </div>
    </div>
  </div>
</div>
